        <activity
            android:name=".ui.activity.LoanAppraiseResultActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".ui.activity.LoanAddSuccessActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.activity.LoanInfoActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.activity.CarInfoActivity"
            android:screenOrientation="portrait"
