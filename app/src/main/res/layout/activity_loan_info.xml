<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/app_toolbar_style">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/app_toolbar_text"
            android:layout_width="wrap_content"
            android:text="借款信息"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="借款编号"/>


        <TextView
            android:id="@+id/tv_loan_id"
            style="@style/my_style_text_small_black"
            tools:text="AX00112"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line_color"/>

    <LinearLayout
        style="@style/my_style_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="产品类型"/>


        <TextView
            android:id="@+id/tv_loan_type"
            style="@style/my_style_text_small_black"
            tools:text="动车宝"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line_color"/>

    <LinearLayout
        style="@style/my_style_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="借款人"/>


        <TextView
            android:id="@+id/tv_loan_name"
            style="@style/my_style_text_small_black"
            tools:text="冯浩"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line_color"/>

    <LinearLayout
        style="@style/my_style_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="申请金额"/>


        <TextView
            android:id="@+id/tv_loan_amount"
            style="@style/my_style_text_small_black"
            tools:text="15万元"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line_color"/>

    <LinearLayout
        style="@style/my_style_rectangle_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="借款期限"/>


        <TextView
            android:id="@+id/tv_loan_deadline"
            style="@style/my_style_text_small_black"
            tools:text="3个月"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/gray_line_color"/>

    <LinearLayout
        style="@style/my_style_rectangle_white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_small_gary"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="性别"/>


        <TextView
            android:id="@+id/tv_sex"
            style="@style/my_style_text_small_black"
            tools:text="男"/>

    </LinearLayout>

</LinearLayout>