<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout android:id="@+id/swipe"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_set_default"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="72dp"
            android:background="@color/red"
            android:padding="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/delete"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_bank_logo"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_small"/>


        <TextView
            android:id="@+id/tv_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_bank_logo"
            android:text="默认"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_small"/>

        <TextView
            android:id="@+id/tv_bank_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_small"/>


    </RelativeLayout>


</com.daimajia.swipe.SwipeLayout>